<Window x:Class="AbsoluteMouseToJoystick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsoluteMouseToJoystick"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.RowSpan="2" Name="tb"/>
        
        <Button Grid.Column="1" Margin="20" Content="Start/Stop" Click="Button_Click"/>

        <StackPanel Grid.Column="1" Grid.Row="1" >
            <TextBlock Margin="5" Text="Resolution" />
            <TextBox Text="1920" Margin="5" Name="resXtb"/>
            <TextBox Text="1080" Margin="5" Name="resYtb"/>
            <TextBlock Margin="5" Text="Is running" />
            <CheckBox Name="runningCheckBox" IsEnabled="False" Margin="5" IsChecked="False"/>
        </StackPanel>
    </Grid>
</Window>

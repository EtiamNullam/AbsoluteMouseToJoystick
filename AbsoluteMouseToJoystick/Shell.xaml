<Window x:Class="AbsoluteMouseToJoystick.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsoluteMouseToJoystick"
        xmlns:views="clr-namespace:AbsoluteMouseToJoystick.Views"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="MainWindow" MinHeight="300" MinWidth="320" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <views:LogView Grid.RowSpan="2"/>
        <views:ControlsView Grid.Column="1" Grid.RowSpan="2"/>
        <views:AxisPreviewView Grid.Column="2" Title="Axis Y preview" Orientation="Vertical" DataContext="{Binding Settings.ZoneDistributionY}" Margin="5"/>
        <views:AxisPreviewView Grid.Column="2" Grid.Row="1" Title="Axis X preview" Orientation="Horizontal" DataContext="{Binding Settings.ZoneDistributionX}" Margin="5"/>
    </Grid>
</Window>

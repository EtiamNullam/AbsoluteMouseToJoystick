<UserControl x:Class="AbsoluteMouseToJoystick.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbsoluteMouseToJoystick.Views"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=Log}"
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <TextBox Margin="3" IsReadOnly="True" Text="{Binding Log}" ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
        <Button Grid.Row="1" Margin="3" Content="Clear Log" Command="{Binding ClearLogCommand}"/>
    </Grid>
</UserControl>

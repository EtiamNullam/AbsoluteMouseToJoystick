<UserControl x:Class="AbsoluteMouseToJoystick.Views.ControlsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbsoluteMouseToJoystick.Views"
             xmlns:converters="clr-namespace:AbsoluteMouseToJoystick.ValueConverters"
             mc:Ignorable="d"
             DataContext="{Binding Source={StaticResource Locator}, Path=Controls}"
             d:DesignHeight="500" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:NegateValueConverter x:Key="negate" />
    </UserControl.Resources>
    <StackPanel Grid.Column="1" Grid.RowSpan="2" >
        <TextBlock Margin="5" Text="Resolution" />

        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="7"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBox Text="{Binding Settings.ResolutionX}" Margin="5"/>
            <TextBlock Grid.Column="1" Text="x" VerticalAlignment="Center"/>
            <TextBox Grid.Column="2" Text="{Binding Settings.ResolutionY}" Margin="5"/>
        </Grid>
        
        <TextBlock Margin="5" Text="Axis X zones" />
        <local:AxisZoneSettingsView DataContext="{Binding Settings.ZoneDistributionX}"/>
        
        <TextBlock Margin="5" Text="Axis Y zones" />
        <local:AxisZoneSettingsView DataContext="{Binding Settings.ZoneDistributionY}"/>

        <TextBlock Text="Timer interval (ms)"/>
        <TextBox Text="{Binding Settings.TimerInterval}" IsEnabled="{Binding IsRunning, Converter={StaticResource negate}}" Margin="5"/>

        <Button Grid.Column="1" Height="30" Margin="5" Content="Start/Stop" Command="{Binding StartStopCommand}"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" Text="Is running" />
            <CheckBox IsEnabled="False" Margin="5" IsChecked="{Binding IsRunning}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
